<%- include("partials/header") %>


<div class="row">
  <div class="col-lg-10"><h1>My Documents</h1></div>
  <div class="col-lg-2 total"><h5>Total: <%=items.length %></h5></div>
</div>

<div class="document-container">
  <%if(items.length == 0){%>
    <div class="zero-docs">
      <p>You hav'nt uploaded any documents</p>
    </div>
  <%} else {%>
  <div id="carouselExampleDark" class="carousel carousel-dark slide">
    <div class="carousel-inner">
      <% for(var i=0; i<items.length; i++) { %>
        <% if(i == 0){ %>
          <div class="carousel-item active" >
        <% } else { %>
          <div class="carousel-item" >
        <% } %>
          <img class=doc-image src="data:image/<%=items[i].img.contentType%>;base64,<%=items[i].img.data.toString('base64')%>" width=300 height=400 alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5><%= items[i].name %></h5>
            <div>
              <button type="button" class="btn btn-primary document-button" name="button">View</button>
              <button type="button" class="btn btn-danger document-button" name="button">Delete</button>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  </div>
  <%}%>


</div>
<div class="upload-box">
  <h3>Upload new documents</h3>
  <div class="input-group mb-3" >
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <div class="upload">
        <input  type="file" id="image" name="image" class="form-control" id="inputGroupFile02">
        <button  type=submit class="input-group-text" for="inputGroupFile02">Upload</button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
